<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="236dp"
    android:layout_height="@dimen/dp_80"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/float_window_bg"
        android:gravity="center"
        android:id="@+id/ll_file_export"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_file_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/float_window_car_icon" />

        <ProgressBar
            android:id="@+id/progressbar_file_export_left"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4" />

        <TextView
            android:id="@+id/tv_current_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:text="50%"
            android:textColor="@color/font_color_333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <ProgressBar
        android:layout_marginStart="@dimen/dp_10"
         android:layout_toEndOf="@+id/ll_file_export"
        android:id="@+id/progressbar_file_export_right"
        android:layout_marginTop="@dimen/dp_29"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_4" />

    <TextView
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/ll_file_export"
        android:layout_below="@+id/progressbar_file_export_right"
        android:id="@+id/tv_current_right"
        android:layout_width="@dimen/dp_32"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="50%"
        android:background="@android:color/white"
        android:gravity="center"
        android:textColor="@color/font_color_333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_toEndOf="@+id/tv_current_right"
        android:layout_below="@+id/progressbar_file_export_right"
        android:layout_width="@dimen/dp_78"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/tv_file_export_tip"
        android:text="进行导出中…"
        android:gravity="center"
        android:background="@android:color/white"
        android:textColor="@color/font_color_333"
        android:textSize="@dimen/sp_12" />


    <ImageView
        android:layout_toRightOf="@id/progressbar_file_export_right"
        android:id="@+id/iv_close_right"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_11"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginEnd="@dimen/dp_11"
        android:layout_marginStart="@dimen/dp_19"
        android:src="@drawable/common_left_back_icon" />
</RelativeLayout>