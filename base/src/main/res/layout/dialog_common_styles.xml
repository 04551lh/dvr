<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_border"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:textColor="@color/font_color_333"/>
    <TextView
        android:id="@+id/tv_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/dp_19"
        android:paddingEnd="@dimen/dp_19"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_30"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/font_color_333"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/split_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_12"
            android:gravity="center"
            android:textColor="@color/font_color_333"
            android:textSize="@dimen/sp_18"/>
        <View
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="match_parent"
            android:background="@color/split_line_color"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_12"
            android:gravity="center"
            android:textColor="@color/system_navigation_bar_color"
            android:textSize="@dimen/sp_18"/>
    </LinearLayout>
</LinearLayout>