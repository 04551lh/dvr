<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activity.DriverInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/system_navigation_bar_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/icon_back"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:text="@string/car_info"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_data"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_driver_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_name"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_sex"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_driver_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_id_card"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_driver_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_is_license"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_driver_is_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/validity_of_driver_is_license"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_validity_of_driver_is_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_nvq"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_driver_nvq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/certification_authority"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_certification_authority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bind_vehicle"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_bind_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>