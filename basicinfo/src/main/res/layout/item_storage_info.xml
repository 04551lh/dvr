<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_storage_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主磁盘"
           android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/capacity_storage"
            android:layout_marginStart="@dimen/dp_5"/>
        <TextView
            android:id="@+id/tv_capacity_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="2G"
            android:layout_marginStart="@dimen/dp_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/used_storage"
            android:layout_marginStart="@dimen/dp_15"/>
        <TextView
            android:id="@+id/tv_used_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="2G"
            android:layout_marginStart="@dimen/dp_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/free_storage"
            android:layout_marginStart="@dimen/dp_15"/>
        <TextView
            android:id="@+id/tv_free_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="2G"
            android:layout_marginStart="@dimen/dp_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingStart="@dimen/dp_40"
        android:paddingEnd="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/disk_status"
            android:layout_marginStart="@dimen/dp_15"/>
        <TextView
            android:id="@+id/tv_disk_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="2G"
            android:layout_marginStart="@dimen/dp_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/special_video"
            android:layout_marginStart="@dimen/dp_15"/>
        <TextView
            android:id="@+id/tv_special_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="2G"
            android:layout_marginStart="@dimen/dp_5"/>
    </LinearLayout>
</LinearLayout>