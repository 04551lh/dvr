<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/home_pager_bg_icon"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_18"
        android:padding="@dimen/dp_10"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/four_g_signal_full_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/location_signal_checked_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/far_light_checked_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/near_light_checked_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/left_turn_signal_checked_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/right_turn_signal_checked_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/brake_checked_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/targets_platform_checked_icon"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_110"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardMaxElevation="@dimen/dp_3"
            app:cardBackgroundColor="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/car_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_25"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_38">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"
                            android:text="@string/car_speed"
                            android:layout_marginTop="@dimen/dp_6"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tv_car_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Km/h"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/license_plate_number_text_color"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textSize="@dimen/sp_20"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"
                            android:text="@string/location"
                            android:layout_marginTop="@dimen/dp_6"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tv_location_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40°N,116°E"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/license_plate_number_text_color"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textSize="@dimen/sp_20"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@android:color/white">

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_50"
               android:layout_marginTop="@dimen/dp_50"
               android:layout_marginStart="@dimen/dp_20"
               android:layout_marginEnd="@dimen/dp_20"
               app:cardCornerRadius="@dimen/dp_8"
               app:cardElevation="@dimen/dp_3"
               app:cardMaxElevation="@dimen/dp_3"
               app:cardBackgroundColor="@android:color/white">
               <LinearLayout
                   android:id="@+id/ll_device_connect"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:layout_marginStart="@dimen/dp_20"
                       android:src="@mipmap/device_connect_icon"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:layout_gravity="center_vertical"
                       android:text="@string/connect_device"
                       android:gravity="center_vertical"
                       android:textSize="@dimen/sp_15"
                       android:textColor="@android:color/black"
                       android:layout_marginStart="@dimen/dp_20"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_3"
                app:cardMaxElevation="@dimen/dp_3"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:id="@+id/ll_platforms_connect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_20"
                        android:src="@mipmap/platforms_connect_icon"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="@string/platforms_connect"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="@dimen/dp_20"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_3"
                app:cardMaxElevation="@dimen/dp_3"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:id="@+id/ll_fill_params"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_20"
                        android:src="@mipmap/fill_params_icon"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="@string/params_write"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="@dimen/dp_20"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_3"
                app:cardMaxElevation="@dimen/dp_3"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:id="@+id/ll_terminal_set"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_20"
                        android:src="@mipmap/set_icon"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="@string/settings"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="@dimen/dp_20"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>