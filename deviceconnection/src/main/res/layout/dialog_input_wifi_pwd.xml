<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="@dimen/dp_1"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="wifi"
            android:textSize="@dimen/sp_15"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/wifi_pwd_bg_border">
            <EditText
                android:id="@+id/et_input_wifi_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/wifi_pwd"
                android:textSize="@dimen/sp_14"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:inputType="textPassword"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_wifi_pwd_is_visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@mipmap/wifi_password_gone"/>
        </LinearLayout>


        <View
            style="@style/DividerLineStyle"
            android:layout_marginTop="@dimen/dp_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textSize="@dimen/sp_15"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:gravity="center"/>
            <View
                android:layout_width="@dimen/dp_0.1"
                android:layout_height="match_parent"
                android:background="@color/under_line_color"/>

            <TextView
                android:id="@+id/tv_connect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/sp_15"
                android:text="@string/connect"
                android:textColor="@color/wifi_pwd_bg_border_color"
                android:layout_gravity="center"
                android:enabled="false"
                android:clickable="false"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>