<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UnderLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0.5</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:background">@color/under_line_color</item>
    </style>

    <style name="RequiredFlag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/required_color</item>
    </style>

    <style name="TvActivateText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/font_color_333</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="EtInputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/font_color_333</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="LinearLayoutParamsFillStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
    </style>

    <style name="TextViewParamsFillStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/font_color_333</item>
    </style>

    <style name="EditTextParamsFillStyle">
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/please_enter</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:textColor">@color/font_color_333</item>
    </style>

    <style name="TextViewUnitStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/font_color_333</item>
        <item name="android:text">@string/unit</item>
    </style>
</resources>