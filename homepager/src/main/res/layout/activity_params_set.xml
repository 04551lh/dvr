<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context=".params.activity.ParamsSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/CommonTitleImageBackStyle" />

        <TextView
            style="@style/CommonTitleTvStyle"
            android:text="@string/params_write" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_27">

            <LinearLayout style="@style/LinearLayoutParamsFillStyle">

                <TextView
                    style="@style/TextViewParamsFillStyle"
                    android:text="@string/cameraHigh" />

                <EditText
                    android:id="@+id/et_camera_height"
                    style="@style/EditTextParamsFillStyle"
                    android:inputType="numberDecimal"
                    android:maxLength="4" />

                <TextView style="@style/TextViewUnitStyle" />
            </LinearLayout>

            <View style="@style/DividerLineStyle" />

            <LinearLayout style="@style/LinearLayoutParamsFillStyle">

                <TextView
                    style="@style/TextViewParamsFillStyle"
                    android:text="@string/bumper_distance" />

                <EditText
                    android:id="@+id/et_bumper_distance"
                    style="@style/EditTextParamsFillStyle"
                    android:inputType="numberDecimal"
                    android:maxLength="4" />

                <TextView style="@style/TextViewUnitStyle" />
            </LinearLayout>

            <View style="@style/DividerLineStyle" />

            <LinearLayout style="@style/LinearLayoutParamsFillStyle">

                <TextView
                    style="@style/TextViewParamsFillStyle"
                    android:text="@string/left_wheel_distance" />

                <EditText
                    android:id="@+id/et_left_wheel_distance"
                    style="@style/EditTextParamsFillStyle"
                    android:inputType="numberDecimal"
                    android:maxLength="4" />

                <TextView style="@style/TextViewUnitStyle" />
            </LinearLayout>

            <View style="@style/DividerLineStyle" />

            <LinearLayout style="@style/LinearLayoutParamsFillStyle">

                <TextView
                    style="@style/TextViewParamsFillStyle"
                    android:text="@string/right_wheel_distance" />

                <EditText
                    android:id="@+id/et_right_wheel_distance"
                    style="@style/EditTextParamsFillStyle"
                    android:inputType="numberDecimal"
                    android:maxLength="4" />

                <TextView style="@style/TextViewUnitStyle" />
            </LinearLayout>


            <View style="@style/DividerLineStyle" />

            <LinearLayout
                style="@style/LinearLayoutParamsFillStyle"
                android:visibility="gone">

                <TextView
                    style="@style/TextViewParamsFillStyle"
                    android:text="@string/front_wheel_distance" />

                <EditText
                    android:id="@+id/et_front_wheel_distance"
                    style="@style/EditTextParamsFillStyle"
                    android:maxLength="4" />

                <TextView style="@style/TextViewUnitStyle" />
            </LinearLayout>

            <View style="@style/DividerLineStyle" />

            <TextView
                android:id="@+id/tv_restore_the_default_params"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/dp_16"
                android:gravity="right|center_vertical"
                android:text="@string/restore_the_default_params"
                android:textColor="@color/system_navigation_bar_color"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_save_params_set_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/btn_shape_style"
                android:paddingLeft="@dimen/dp_62"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_62"
                android:paddingBottom="@dimen/dp_7"
                android:text="@string/save"
                android:textColor="@color/save_font_color" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>