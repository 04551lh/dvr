<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SpeedSetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/system_navigation_bar_color">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_back"
            android:layout_marginStart="@dimen/dp_10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed_set"
            android:textSize="@dimen/sp_18"
            android:textColor="@android:color/white"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pulse_speed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@android:color/white"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/pulse_speed"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_15"/>
        <CheckBox
            android:id="@+id/cb_pulse_speed"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:button="@drawable/cb_box_selector"
            android:checked="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/split_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <TextView
                android:id="@+id/tv_manual_calibration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="@string/manual_calibration"
                android:textSize="@dimen/sp_15"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:background="@android:color/white"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@android:color/white"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_coefficient_of_the_pulse"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:text="@string/coefficient_of_the_pulse"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/et_coefficient_of_the_pulse_value"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:inputType="number"
                    android:gravity="center"
                    android:text="@string/default_number"
                    android:layout_gravity="center"
                    android:background="@drawable/et_bg_border"/>

                <TextView
                    android:id="@+id/tv_proportion_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:text="* 100"
                    android:textColor="@android:color/black"
                   />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/split_line_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@android:color/white">
                <TextView
                    android:id="@+id/tv_automatic_calibration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/automatic_calibration"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:textColor="@android:color/black"/>
                <com.adasplus.base.view.SlideSwitchView
                    android:id="@+id/ssv_automatic_calibration_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    />
            </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_60"
              android:background="@android:color/white"
              android:layout_marginEnd="@dimen/dp_10">
              <TextView
                  android:id="@+id/tv_error_value"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="@string/error_value"
                  android:textSize="@dimen/sp_15"
                  android:gravity="center_vertical"
                  android:paddingStart="@dimen/dp_10"
                  android:paddingEnd="@dimen/dp_10"
                  android:textColor="@android:color/black"/>
              <include
                  layout="@layout/include_add_or_sub_layout"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:id="@+id/tv_percent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/percent"
                  android:textColor="@android:color/black"
                  android:textSize="@dimen/sp_15"
                  />
          </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/split_line_color"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_simulation_speed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@android:color/white"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/simulation_speed"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_15"/>
        <CheckBox
            android:id="@+id/cb_simulation_speed_status"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:button="@drawable/cb_box_selector"
            android:checked="false"
            android:focusable="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <com.adasplus.base.view.SignSeekBar
            android:id="@+id/ssb_speed_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            app:ssb_auto_adjust_section_mark="false"
            app:ssb_is_float_type="false"
            app:ssb_show_thumb_text="true"
            app:ssb_second_track_color="@color/system_navigation_bar_color"
            app:ssb_track_color="@color/system_navigation_bar_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/split_line_color"/>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/btn_shape_style"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@android:color/white" />
</LinearLayout>