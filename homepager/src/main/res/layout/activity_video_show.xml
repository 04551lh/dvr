<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".set.activity.VideoShowActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_video_show_back"
                    style="@style/CommonTitleImageBackStyle" />

                <TextView
                    android:text="@string/video_show"
                    style="@style/CommonTitleTvStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/system_navigation_bar_color"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16"
                    android:textSize="@dimen/sp_10"
                    android:background="@android:color/white"
                    android:text="@string/video_show"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16">

                        <TextView
                            style="@style/RequiredFlag"
                            android:text="@string/required_flag" />

                        <TextView
                            style="@style/TvActivateText"
                            android:text="@string/video_show_platform" />

                        <EditText
                            android:id="@+id/et_video_show_platform"
                            style="@style/EtInputText"
                            android:layout_marginStart="@dimen/dp_10"
                            android:hint="@string/please_enter"
                            android:inputType="number" />
                </LinearLayout>

                <View style="@style/UnderLineStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="@dimen/dp_16">
                        <TextView
                            style="@style/RequiredFlag"
                            android:text="@string/required_flag" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/full_screen"
                            android:textColor="@color/font_color_333"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:id="@+id/iv_full_screen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/switch_open_icon"
                            android:visibility="visible" />

                </LinearLayout>
                <View style="@style/UnderLineStyle" />

                <TextView
                    android:id="@+id/tv_video_show_save"
                    style="@style/CommonSaveBtnStyle"/>
        </LinearLayout>


</LinearLayout>