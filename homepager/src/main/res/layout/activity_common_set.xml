<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background"
    tools:context=".set.activity.CommonSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/icon_black_back"
            android:textColor="@color/font_color_333" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/common_set"
            android:textColor="@color/font_color_333"
            android:textSize="@dimen/sp_18" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/split_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <LinearLayout
            style="@style/LinearLayoutDisplayDataStyle"
            android:id="@+id/ll_time_set">
            <TextView

                android:text="@string/time_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_8"
                android:drawableLeft="@mipmap/time_settings_icon"
                android:textColor="@color/font_color_333"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View style="@style/UnderLineStyle"/>
        <LinearLayout
            style="@style/LinearLayoutDisplayDataStyle"
            android:id="@+id/ll_sound_set">
            <TextView

                android:text="@string/sound_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_8"
                android:drawableLeft="@mipmap/sound_settings_icon"
                android:textColor="@color/font_color_333"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View style="@style/UnderLineStyle"/>
        <LinearLayout
            style="@style/LinearLayoutDisplayDataStyle"
            android:id="@+id/ll_dormancy_set">
            <TextView

                android:text="@string/dormancy_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_8"
                android:drawableLeft="@mipmap/dormancy_settings_icon"
                android:textColor="@color/font_color_333"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View style="@style/UnderLineStyle"/>
        <LinearLayout
            style="@style/LinearLayoutDisplayDataStyle"
            android:id="@+id/ll_reboot_set">
            <TextView

                android:text="@string/reboot_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_8"
                android:drawableLeft="@mipmap/reboot_settings_icon"
                android:textColor="@color/font_color_333"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View style="@style/UnderLineStyle"/>
        <LinearLayout
            style="@style/LinearLayoutDisplayDataStyle"
            android:id="@+id/ll_device_format">
            <TextView

                android:text="@string/device_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_8"
                android:drawableLeft="@mipmap/device_format_icon"
                android:textColor="@color/font_color_333"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View style="@style/UnderLineStyle"/>
        <LinearLayout
            style="@style/LinearLayoutDisplayDataStyle"
            android:id="@+id/ll_factory_data_reset">
            <TextView

                android:text="@string/factory_data_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_8"
                android:drawableLeft="@mipmap/factory_data_reset_icon"
                android:textColor="@color/font_color_333"
                android:textSize="@dimen/sp_16"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/split_line_color"/>

</LinearLayout>