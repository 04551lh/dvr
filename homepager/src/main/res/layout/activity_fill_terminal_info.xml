<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/CommonTitleImageBackStyle" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/CommonTitleTvStyle"
            android:text="@string/platform_connect" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_platform_information"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_hint_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/hint_font_color"
                android:paddingStart="@dimen/dp_19"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_33"
                android:text="@string/platform_hint_message"
                android:textColor="@color/font_color_333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_close_hint_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/tv_hint"
                android:paddingTop="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_36"
                android:paddingStart="@dimen/dp_12"
                android:src="@mipmap/close_hint_message_icon" />
        </RelativeLayout>

        <LinearLayout style="@style/LinearLayoutFillDataStyle">

            <LinearLayout
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    style="@style/RequiredFlag"
                    android:text="@string/required_flag" />

                <TextView
                    style="@style/TvActivateText"
                    android:text="@string/phone_number" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_platform_phone_number"
                style="@style/EtInputText"
                android:layout_marginEnd="@dimen/dp_18"
                android:hint="@string/please_enter" />
        </LinearLayout>

        <View style="@style/UnderLineStyle" />

        <LinearLayout style="@style/LinearLayoutFillDataStyle">

            <TextView
                style="@style/TvActivateText"
                android:layout_width="@dimen/dp_60"
                android:text="@string/license_plate_number" />

            <EditText
                android:id="@+id/et_license_plate_number"
                style="@style/EtInputText"
                android:layout_marginEnd="@dimen/dp_18"
                android:hint="@string/please_enter" />
        </LinearLayout>

        <View style="@style/UnderLineStyle" />

        <LinearLayout style="@style/LinearLayoutFillDataStyle">

            <TextView
                style="@style/TvActivateText"
                android:layout_width="@dimen/dp_60"
                android:text="@string/chassis_number" />

            <EditText
                android:id="@+id/et_chassis_number"
                style="@style/EtInputText"
                android:layout_marginEnd="@dimen/dp_18"
                android:hint="@string/please_enter" />
        </LinearLayout>

        <View style="@style/UnderLineStyle" />

        <LinearLayout style="@style/LinearLayoutFillDataStyle">

            <TextView
                style="@style/TvActivateText"
                android:layout_width="@dimen/dp_60"
                android:text="@string/license_plate_color" />

            <TextView
                android:id="@+id/tv_license_plate_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@mipmap/right_arrow"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical|right"
                android:hint="@string/please_select"
                android:textColor="@color/font_color_333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View style="@style/UnderLineStyle" />

        <LinearLayout style="@style/LinearLayoutFillDataStyle">

            <TextView
                style="@style/TvActivateText"
                android:layout_width="@dimen/dp_60"
                android:text="@string/terminal_id" />

            <EditText
                android:id="@+id/et_terminal_id"
                style="@style/EtInputText"
                android:layout_marginEnd="@dimen/dp_18"
                android:hint="@string/please_enter"
                android:inputType="number"
                android:maxLength="7" />
        </LinearLayout>

        <View style="@style/UnderLineStyle" />

        <LinearLayout style="@style/LinearLayoutFillDataStyle">

            <TextView
                style="@style/TvActivateText"
                android:layout_width="@dimen/dp_60"
                android:text="@string/provincial_domain_id" />

            <TextView
                android:id="@+id/tv_provincial_domain_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@mipmap/right_arrow"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical|right"
                android:hint="@string/please_select"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View style="@style/UnderLineStyle" />

        <LinearLayout style="@style/LinearLayoutFillDataStyle">

            <TextView
                style="@style/TvActivateText"
                android:layout_width="@dimen/dp_60"
                android:text="@string/city_and_county_id" />

            <TextView
                android:id="@+id/tv_city_and_county_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:drawableRight="@mipmap/right_arrow"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical|right"
                android:hint="@string/please_select"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View style="@style/UnderLineStyle" />

        <TextView
            android:id="@+id/tv_save_terminal_info"
            style="@style/CommonSaveBtnStyle" />
    </LinearLayout>


</LinearLayout>