<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UnderLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0.5</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:background">@color/under_line_color</item>
    </style>

    <style name="RequiredFlag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/required_color</item>
    </style>

    <style name="TvActivateText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/font_color_333</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="EtInputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/font_color_333</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>