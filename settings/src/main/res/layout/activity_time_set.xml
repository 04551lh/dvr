<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activity.TimeSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/system_navigation_bar_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/time_set"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:text="@string/automatic_correction_when"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_15" />

    <View style="@style/DividerLineStyle" />

    <LinearLayout
        android:id="@+id/ll_network_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/network_time"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_15" />

        <CheckBox
            android:id="@+id/cb_network_time"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:button="@drawable/cb_box_selector"
            android:checked="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gps_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/gps_time"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_15" />

        <CheckBox
            android:id="@+id/cb_gps_time"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:button="@drawable/cb_box_selector"
            android:checked="false" />
    </LinearLayout>

    <View style="@style/DividerLineStyle" />

    <LinearLayout
        android:id="@+id/ll_when_manual_calibration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/when_manual_calibration"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_15" />

        <CheckBox
            android:id="@+id/cb_when_manual_calibration"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:button="@drawable/cb_box_selector"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <EditText
                android:id="@+id/et_year"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/et_bg_border"
                android:gravity="center"
                android:hint="@string/please_enter"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:text="@string/year"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/et_month"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@drawable/et_bg_border"
                android:gravity="center"
                android:hint="@string/please_enter"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/month"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/et_day"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@drawable/et_bg_border"
                android:gravity="center"
                android:hint="@string/please_enter"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/day"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@android:color/white">

            <EditText
                android:id="@+id/et_hours"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/et_bg_border"
                android:gravity="center"
                android:hint="@string/please_enter"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:text="@string/hours"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/et_minutes"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@drawable/et_bg_border"
                android:gravity="center"
                android:hint="@string/please_enter"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/minutes"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/et_seconds"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@drawable/et_bg_border"
                android:gravity="center"
                android:hint="@string/please_enter"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/seconds"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/DividerLineStyle" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/btn_shape_style"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@android:color/white" />
</LinearLayout>