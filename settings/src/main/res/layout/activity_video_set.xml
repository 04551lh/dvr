<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activity.VideoSetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/system_navigation_bar_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/icon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/video_set"
            android:textSize="@dimen/sp_18"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/channels_number"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_select_channels_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">
                <TextView
                    android:id="@+id/tv_main_stream_set"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/system_navigation_bar_color"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="@string/main_stream"/>
                <TextView
                    android:id="@+id/tv_sub_stream_set"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:text="@string/sub_stream"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/open_or_close"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
                <com.adasplus.base.view.SlideSwitchView
                    android:id="@+id/ssv_stream_total_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/video_frame_rate"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_video_frame_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/image_quality"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
                <include
                    layout="@layout/include_add_or_sub_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/resolution_ratio"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_resolution_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>

            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/date_time"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
                <com.adasplus.base.view.SlideSwitchView
                    android:id="@+id/ssv_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/license_plate_number"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
                <com.adasplus.base.view.SlideSwitchView
                    android:id="@+id/ssv_license_plate_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/channel_name"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
                <com.adasplus.base.view.SlideSwitchView
                    android:id="@+id/ssv_channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/gps_signal"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
                <com.adasplus.base.view.SlideSwitchView
                    android:id="@+id/ssv_gps_signal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/speed"
                    android:textSize="@dimen/sp_15"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"/>
                <com.adasplus.base.view.SlideSwitchView
                    android:id="@+id/ssv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                style="@style/DividerLineStyle"/>

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/btn_shape_style"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>